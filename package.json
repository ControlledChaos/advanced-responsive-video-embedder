{
  "name": "arve",
  "main": "advanced-responsive-video-embedder.php",
  "author": "Nicolas Jonas",
  "license": "GPL-3.0",
  "scripts": {
    "markdown": "cd readme; for f in *.md; do markdown $f > html/$f.html; done",
    "readme": "cat readme/*.md CHANGELOG.md > readme.md; cp readme.md readme.txt",
    "uglifyjs": "uglifyjs --compress --mangle --comments '/^!/' --output public/arve.min.js public/arve.js",
    "cleancss": "cleancss --level 1 --source-map --output public/arve.min.css public/arve.css",
    "build": "run-p readme uglifyjs cleancss markdown"
  }
}
